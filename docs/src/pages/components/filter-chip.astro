---
import DocsLayout from '../../layouts/DocsLayout.astro';
import CodePreview from '../../components/CodePreview.astro';
---

<DocsLayout title="Filter Chip">
  <p class="text-base-content/70 mb-6">Interactive toggleable chips for filtering data, with active states, counts, remove buttons, and scrollable groups.</p>

  <CodePreview
    title="Basic Filter Chips"
    semantic={`<div class="filter-chips">
  <button class="filter-chip filter-chip-active">All</button>
  <button class="filter-chip">Active</button>
  <button class="filter-chip">Completed</button>
  <button class="filter-chip">Archived</button>
</div>`}
    tailwind={`<div class="flex flex-wrap gap-2">
  <button class="inline-flex items-center h-8 px-3 text-[0.8125rem] font-medium bg-primary text-primary-content rounded-full">All</button>
  <button class="inline-flex items-center h-8 px-3 text-[0.8125rem] font-medium text-base-content/60 bg-base-content/5 border border-base-300 rounded-full hover:bg-base-300">Active</button>
  <!-- more chips... -->
</div>`}
    js={`// Toggle: chip.classList.toggle('filter-chip-active');
// Or use data-state: chip.dataset.state = chip.dataset.state === 'active' ? '' : 'active';`}
  />

  <CodePreview
    title="With Icons & Counts"
    semantic={`<div class="filter-chips">
  <button class="filter-chip filter-chip-active">
    <svg class="filter-chip-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 12h-4l-3 9L9 3l-3 9H2"/></svg>
    Status
    <span class="filter-chip-count">3</span>
  </button>
  <button class="filter-chip">
    Priority
    <span class="filter-chip-count">12</span>
  </button>
  <button class="filter-chip filter-chip-active">
    Labels
    <button class="filter-chip-remove"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M18 6 6 18M6 6l12 12"/></svg></button>
  </button>
</div>`}
    tailwind={`<!-- Count: min-w-[18px] h-[18px] rounded-full bg-black/10 text-[0.6875rem]
     Remove: 18px circle with X icon -->`}
    js={`// Remove: chip.remove(); or chip.classList.remove('filter-chip-active');`}
  />

  <CodePreview
    title="Variants"
    semantic={`<!-- Outline -->
<div class="filter-chips mb-4">
  <button class="filter-chip filter-chip-outline">Outline</button>
  <button class="filter-chip filter-chip-outline filter-chip-active">Active Outline</button>
</div>

<!-- Soft -->
<div class="filter-chips mb-4">
  <button class="filter-chip filter-chip-soft filter-chip-active">Soft Active</button>
  <button class="filter-chip filter-chip-soft">Soft</button>
</div>

<!-- Sizes -->
<div class="filter-chips items-end">
  <button class="filter-chip filter-chip-sm">Small</button>
  <button class="filter-chip">Default</button>
  <button class="filter-chip filter-chip-lg">Large</button>
</div>`}
    tailwind={`<!-- Outline active: transparent bg, primary border + text
     Soft active: primary/10 bg, primary/20 border
     sm: 26px height, lg: 40px height -->`}
    js={`// No JavaScript required for static variants`}
  />

  <CodePreview
    title="Scrollable Group"
    semantic={`<div class="filter-chips filter-chips-scroll">
  <span class="filter-chips-label">Filter:</span>
  <button class="filter-chip filter-chip-active">All</button>
  <button class="filter-chip">Electronics</button>
  <button class="filter-chip">Clothing</button>
  <button class="filter-chip">Books</button>
  <button class="filter-chip">Sports</button>
  <button class="filter-chip">Home</button>
  <button class="filter-chip">Toys</button>
  <div class="filter-chips-divider"></div>
  <button class="filter-chips-clear">Clear all</button>
</div>`}
    tailwind={`<!-- Scroll: flex-nowrap overflow-x-auto scrollbar-hide
     Divider: 1px width, 24px height vertical line -->`}
    js={`// Clear all: document.querySelectorAll('.filter-chip-active').forEach(c => c.classList.remove('filter-chip-active'));`}
  />

  <div class="overflow-x-auto mt-8">
    <table class="table">
      <thead><tr><th>Class</th><th>Description</th></tr></thead>
      <tbody>
        <tr><td><code>.filter-chip</code></td><td>Base chip (32px pill)</td></tr>
        <tr><td><code>.filter-chip-active</code></td><td>Active/selected state</td></tr>
        <tr><td><code>.filter-chip-icon</code></td><td>Leading icon (16px)</td></tr>
        <tr><td><code>.filter-chip-count</code></td><td>Count badge</td></tr>
        <tr><td><code>.filter-chip-remove</code></td><td>Remove button (X)</td></tr>
        <tr><td><code>.filter-chip-sm</code></td><td>Small (26px)</td></tr>
        <tr><td><code>.filter-chip-lg</code></td><td>Large (40px)</td></tr>
        <tr><td><code>.filter-chip-outline</code></td><td>Outline variant</td></tr>
        <tr><td><code>.filter-chip-soft</code></td><td>Soft tinted variant</td></tr>
        <tr><td><code>.filter-chip.glass</code></td><td>Glass morphism variant</td></tr>
        <tr><td><code>.filter-chips</code></td><td>Chip group (flex-wrap)</td></tr>
        <tr><td><code>.filter-chips-scroll</code></td><td>Horizontal scroll group</td></tr>
        <tr><td><code>.filter-chips-divider</code></td><td>Vertical divider</td></tr>
        <tr><td><code>.filter-chips-label</code></td><td>Group label</td></tr>
        <tr><td><code>.filter-chips-clear</code></td><td>Clear all button</td></tr>
      </tbody>
    </table>
  </div>
</DocsLayout>
