---
import DocsLayout from '../../layouts/DocsLayout.astro';
import CodePreview from '../../components/CodePreview.astro';
---

<DocsLayout title="Carousel">
  <p class="text-base-content/70 mb-6">Content carousel with navigation arrows, dots, transition effects, and responsive slides-per-view.</p>

  <CodePreview
    title="Basic Carousel"
    semantic={`<div class="carousel carousel-show-1">
  <div class="carousel-viewport">
    <div class="carousel-track" style="transform: translateX(0%);">
      <div class="carousel-slide">
        <div class="card"><div class="card-body text-center p-12 bg-primary/10">Slide 1</div></div>
      </div>
      <div class="carousel-slide">
        <div class="card"><div class="card-body text-center p-12 bg-success/10">Slide 2</div></div>
      </div>
      <div class="carousel-slide">
        <div class="card"><div class="card-body text-center p-12 bg-warning/10">Slide 3</div></div>
      </div>
    </div>
  </div>
  <button class="carousel-nav carousel-nav-prev">
    <svg xmlns="http://www.w3.org/2000/svg" class="size-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="m15 18-6-6 6-6"/></svg>
  </button>
  <button class="carousel-nav carousel-nav-next">
    <svg xmlns="http://www.w3.org/2000/svg" class="size-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="m9 18 6-6-6-6"/></svg>
  </button>
  <div class="carousel-pagination">
    <button class="carousel-dot carousel-dot-active"></button>
    <button class="carousel-dot"></button>
    <button class="carousel-dot"></button>
  </div>
</div>`}
    tailwind={`<div class="relative w-full overflow-hidden">
  <div class="overflow-hidden w-full">
    <div class="flex transition-transform duration-500" style="transform: translateX(0%);">
      <div class="shrink-0 w-full">
        <div class="card"><div class="card-body text-center p-12 bg-primary/10">Slide 1</div></div>
      </div>
      <div class="shrink-0 w-full">
        <div class="card"><div class="card-body text-center p-12 bg-success/10">Slide 2</div></div>
      </div>
    </div>
  </div>
  <!-- Nav arrows: absolute positioned circles -->
  <!-- Dots: flex justify-center gap-1 -->
</div>`}
    js={`// Move track by updating translateX:
// track.style.transform = \`translateX(-\${index * 100}%)\`;
// Update active dot:
// dots.forEach((d, i) => d.classList.toggle('carousel-dot-active', i === index));
// Navigation buttons:
// prevBtn.addEventListener('click', () => goTo(currentIndex - 1));
// nextBtn.addEventListener('click', () => goTo(currentIndex + 1));`}
  />

  <CodePreview
    title="Multiple Slides Per View"
    semantic={`<div class="carousel carousel-show-3 carousel-gap-md">
  <div class="carousel-viewport">
    <div class="carousel-track">
      <div class="carousel-slide"><div class="card"><div class="card-body text-center bg-base-200">1</div></div></div>
      <div class="carousel-slide"><div class="card"><div class="card-body text-center bg-base-200">2</div></div></div>
      <div class="carousel-slide"><div class="card"><div class="card-body text-center bg-base-200">3</div></div></div>
      <div class="carousel-slide"><div class="card"><div class="card-body text-center bg-base-200">4</div></div></div>
      <div class="carousel-slide"><div class="card"><div class="card-body text-center bg-base-200">5</div></div></div>
      <div class="carousel-slide"><div class="card"><div class="card-body text-center bg-base-200">6</div></div></div>
    </div>
  </div>
</div>`}
    tailwind={`<!-- carousel-show-3: each slide 33.33% width
     carousel-gap-md: 1rem padding between slides -->
<div class="relative w-full overflow-hidden">
  <div class="flex">
    <div class="shrink-0 w-1/3 px-4">...</div>
    <div class="shrink-0 w-1/3 px-4">...</div>
    <div class="shrink-0 w-1/3 px-4">...</div>
  </div>
</div>`}
    js={`// For multi-slide, calculate translateX as:
// translateX(-\${index * (100 / slidesPerView)}%)`}
  />

  <CodePreview
    title="Fade & Line Dots"
    semantic={`<!-- Fade transition instead of slide -->
<div class="carousel carousel-fade">
  <div class="carousel-viewport">
    <div class="carousel-track">
      <div class="carousel-slide carousel-slide-active">
        <div class="card"><div class="card-body text-center p-12 bg-primary/10">Fade Slide 1</div></div>
      </div>
      <div class="carousel-slide">
        <div class="card"><div class="card-body text-center p-12 bg-success/10">Fade Slide 2</div></div>
      </div>
    </div>
  </div>
  <div class="carousel-pagination carousel-pagination-lines">
    <button class="carousel-dot carousel-dot-active"></button>
    <button class="carousel-dot"></button>
  </div>
</div>`}
    tailwind={`<!-- Fade: slides are absolutely positioned, opacity toggles
     Line dots: 24px wide, 4px tall bars -->`}
    js={`// For fade: toggle carousel-slide-active class
// slide.classList.toggle('carousel-slide-active', i === index);`}
  />

  <div class="overflow-x-auto mt-8">
    <table class="table">
      <thead><tr><th>Class</th><th>Description</th></tr></thead>
      <tbody>
        <tr><td><code>.carousel</code></td><td>Container</td></tr>
        <tr><td><code>.carousel-viewport</code></td><td>Overflow hidden viewport</td></tr>
        <tr><td><code>.carousel-track</code></td><td>Flexbox track (move with transform)</td></tr>
        <tr><td><code>.carousel-slide</code></td><td>Individual slide</td></tr>
        <tr><td><code>.carousel-nav</code></td><td>Navigation arrow button</td></tr>
        <tr><td><code>.carousel-nav-prev/next</code></td><td>Left/right positioning</td></tr>
        <tr><td><code>.carousel-dot</code></td><td>Pagination dot</td></tr>
        <tr><td><code>.carousel-dot-active</code></td><td>Active dot</td></tr>
        <tr><td><code>.carousel-show-1..6</code></td><td>Slides visible per view</td></tr>
        <tr><td><code>.carousel-gap-xs/sm/md/lg</code></td><td>Gap between slides</td></tr>
        <tr><td><code>.carousel-smooth/fast/spring</code></td><td>Transition speed variants</td></tr>
        <tr><td><code>.carousel-fade</code></td><td>Fade transition (no slide)</td></tr>
        <tr><td><code>.carousel-center</code></td><td>Center mode with scale</td></tr>
        <tr><td><code>.carousel-pagination-lines</code></td><td>Line-style dots</td></tr>
        <tr><td><code>.carousel-nav-outside</code></td><td>Arrows outside carousel</td></tr>
        <tr><td><code>.carousel-loading</code></td><td>Loading spinner state</td></tr>
      </tbody>
    </table>
  </div>
</DocsLayout>
