function updateNowLine() &#123;
  const now = new Date();
  const hours = now.getHours();
  const minutes = now.getMinutes();
  const hourHeight = 60; // --scheduler-hour-height
  const startHour = 8; // first visible hour

  const top = (hours - startHour) * hourHeight
            + (minutes / 60) * hourHeight;

  const line = document.querySelector('.scheduler-now-line');
  if (line) line.style.top = top + 'px';
&#125;

updateNowLine();
setInterval(updateNowLine, 60000); // Update every minute`}
