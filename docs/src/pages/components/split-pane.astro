---
import DocsLayout from '../../layouts/DocsLayout.astro';
import CodePreview from '../../components/CodePreview.astro';
---

<DocsLayout title="Split Pane">
  <p class="text-base-content/70 mb-6">Two-panel layout with main content and a collapsible side panel. Uses a hidden checkbox — <strong>no JavaScript needed</strong>. Desktop: side-by-side. Mobile: overlay from edge.</p>

  <CodePreview
    title="Collapsible with Divider (No JS)"
    height="350px"
    semantic={`<!-- Hidden checkbox controls the panel (checked = open) -->
<input type="checkbox" id="sp-demo" class="split-pane-toggle" checked>

<div class="split-pane" style="height: 300px; border: 1px solid var(--color-base-300); border-radius: var(--radius-box, 0.75rem); overflow: hidden;">
  <div class="split-pane-main" style="padding: 1rem;">
    <h4 style="font-weight: 600; margin-bottom: 0.5rem;">Main Content</h4>
    <p style="color: var(--color-base-content); opacity: 0.7;">Click the chevron on the divider to collapse/expand the side panel. No JavaScript required — powered by a hidden checkbox.</p>
  </div>
  <div class="split-pane-divider">
    <label for="sp-demo" class="split-pane-divider-btn" aria-label="Toggle side panel">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"/></svg>
    </label>
  </div>
  <div class="split-pane-side" style="padding: 1rem;">
    <h4 style="font-weight: 600; margin-bottom: 0.5rem;">Side Panel</h4>
    <p style="color: var(--color-base-content); opacity: 0.7;">This panel collapses smoothly with CSS transitions.</p>
  </div>
</div>`}
    tailwind={`<!-- Hidden checkbox (checked = panel visible) -->
<input type="checkbox" id="sp-demo" class="fixed w-0 h-0 opacity-0 pointer-events-none" checked>

<div class="flex flex-row h-75 border border-base-300 rounded-box overflow-hidden">
  <div class="flex-1 min-w-0 p-4">
    <h4 class="font-semibold mb-2">Main Content</h4>
    <p class="text-base-content/70">Click the chevron to collapse/expand. No JS required.</p>
  </div>
  <!-- Divider with toggle label -->
  <div class="shrink-0 flex flex-col items-center justify-center relative bg-base-300" style="width: 1px;">
    <label for="sp-demo" class="flex items-center justify-center w-6 h-6 rounded-full bg-base-200 border border-base-300 text-base-content/60 hover:text-base-content hover:bg-base-300 cursor-pointer transition-all" aria-label="Toggle panel">
      <svg class="w-3.5 h-3.5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"/></svg>
    </label>
  </div>
  <div class="w-80 shrink-0 h-full flex flex-col overflow-hidden border-l border-base-300 bg-base-100 p-4 transition-all duration-200">
    <h4 class="font-semibold mb-2">Side Panel</h4>
    <p class="text-base-content/70">Collapses smoothly.</p>
  </div>
</div>`}
    js={`// No JavaScript needed! The hidden checkbox handles everything.
// checked = panel visible, unchecked = collapsed.
//
// Structure:
// <input type="checkbox" id="sp" class="split-pane-toggle" checked>
// <div class="split-pane">
//   <div class="split-pane-main">...</div>
//   <div class="split-pane-divider">
//     <label for="sp" class="split-pane-divider-btn">chevron</label>
//   </div>
//   <div class="split-pane-side">...</div>
// </div>`}
  />

