---
import DocsLayout from '../../layouts/DocsLayout.astro';
import CodePreview from '../../components/CodePreview.astro';
---

<DocsLayout title="Badge">
  <p class="text-base-content/70 mb-6">Small label for counts, status, and metadata.</p>

  <CodePreview
    title="Basic"
    noFrame
    semantic={`<span class="badge">Default</span>
<span class="badge color-primary">Primary</span>
<span class="badge color-secondary">Secondary</span>
<span class="badge color-accent">Accent</span>
<span class="badge color-neutral">Neutral</span>`}
  />

  <CodePreview
    title="State Colors"
    noFrame
    semantic={`<span class="badge color-info">Info</span>
<span class="badge color-success">Success</span>
<span class="badge color-warning">Warning</span>
<span class="badge color-error">Error</span>`}
  />

  <CodePreview
    title="Outline"
    noFrame
    semantic={`<span class="badge badge-outline">Default</span>
<span class="badge badge-outline color-primary">Primary</span>
<span class="badge badge-outline color-success">Success</span>
<span class="badge badge-outline color-error">Error</span>`}
  />

  <CodePreview
    title="Soft"
    noFrame
    semantic={`<span class="badge badge-soft">Default</span>
<span class="badge badge-soft color-primary">Primary</span>
<span class="badge badge-soft color-success">Success</span>
<span class="badge badge-soft color-warning">Warning</span>
<span class="badge badge-soft color-error">Error</span>`}
  />

  <CodePreview
    title="Ghost"
    noFrame
    semantic={`<span class="badge badge-ghost">Ghost</span>`}
  />

  <CodePreview
    title="Glass"
    semantic={`<div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); padding: 2rem; display: flex; gap: 0.5rem; flex-wrap: wrap; align-items: center; border-radius: 0.75rem;">
  <span class="badge glass">Glass</span>
  <span class="badge glass badge-lg">Large Glass</span>
</div>`}
    height="120px"
  />

  <CodePreview
    title="Sizes"
    noFrame
    semantic={`<span class="badge badge-xs color-primary">XS</span>
<span class="badge badge-sm color-primary">SM</span>
<span class="badge color-primary">Default</span>
<span class="badge badge-lg color-primary">LG</span>
<span class="badge badge-xl color-primary">XL</span>`}
  />

  <CodePreview
    title="Dot (Status Indicator)"
    noFrame
    semantic={`<span class="badge badge-dot color-success"></span>
<span class="badge badge-dot color-warning"></span>
<span class="badge badge-dot color-error"></span>
<span class="badge badge-dot badge-sm color-primary"></span>
<span class="badge badge-dot badge-lg color-info"></span>`}
  />

  <CodePreview
    title="Badge on Button"
    noFrame
    semantic={`<div class="badge-container">
  <button class="btn">
    Inbox
  </button>
  <span class="badge badge-sm color-error">5</span>
</div>

<div class="badge-container">
  <button class="btn btn-circle color-primary">
    <svg class="btn-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 0 0 5.454-1.31A8.967 8.967 0 0 1 18 9.75V9A6 6 0 0 0 6 9v.75a8.967 8.967 0 0 1-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 0 1-5.714 0m5.714 0a3 3 0 1 1-5.714 0" /></svg>
  </button>
  <span class="badge badge-dot color-error"></span>
</div>

<div class="badge-container">
  <button class="btn btn-outline">
    Cart
  </button>
  <span class="badge badge-xs color-primary">99+</span>
</div>`}
  />

  <CodePreview
    title="Badge Positions"
    noFrame
    semantic={`<div style="display: flex; gap: 2rem; align-items: center;">
  <div class="badge-container">
    <div style="width: 3rem; height: 3rem; border-radius: 9999px; background: var(--color-base-200); display: flex; align-items: center; justify-content: center;">A</div>
    <span class="badge badge-sm color-error">3</span>
  </div>

  <div class="badge-container badge-container-top-left">
    <div style="width: 3rem; height: 3rem; border-radius: 9999px; background: var(--color-base-200); display: flex; align-items: center; justify-content: center;">B</div>
    <span class="badge badge-sm color-primary">7</span>
  </div>

  <div class="badge-container badge-container-bottom-right">
    <div style="width: 3rem; height: 3rem; border-radius: 9999px; background: var(--color-base-200); display: flex; align-items: center; justify-content: center;">C</div>
    <span class="badge badge-dot color-success"></span>
  </div>

  <div class="badge-container badge-container-bottom-left">
    <div style="width: 3rem; height: 3rem; border-radius: 9999px; background: var(--color-base-200); display: flex; align-items: center; justify-content: center;">D</div>
    <span class="badge badge-sm color-warning">!</span>
  </div>
</div>`}
  />

  <CodePreview
    title="Animations"
    noFrame
    semantic={`<span class="badge color-error badge-pulse">Live</span>
<span class="badge color-success badge-bounce">New</span>

<div class="badge-container" style="margin-left: 1rem;">
  <button class="btn btn-ghost">Notifications</button>
  <span class="badge badge-sm color-error badge-pulse">3</span>
</div>`}
  />

  <CodePreview
    title="In Text"
    noFrame
    semantic={`<p style="font-size: 0.875rem; color: var(--color-base-content);">
  Messages <span class="badge badge-sm color-primary">12</span>
  &nbsp;&nbsp;
  Status <span class="badge badge-sm badge-soft color-success">Active</span>
  &nbsp;&nbsp;
  Version <span class="badge badge-sm badge-outline">v3.0</span>
</p>`}
  />

  <!-- Reference Table -->
  <div class="mt-10 space-y-6">
    <h2 class="text-xl font-bold">Classes Reference</h2>

    <div class="overflow-x-auto">
      <table class="w-full text-sm border border-base-300 rounded-lg overflow-hidden">
        <thead class="bg-base-200">
          <tr>
            <th class="text-left px-4 py-2 font-medium">Class</th>
            <th class="text-left px-4 py-2 font-medium">Description</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-base-300">
          <tr><td class="px-4 py-2 font-mono text-xs">.badge</td><td class="px-4 py-2">Base badge</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.badge-outline</td><td class="px-4 py-2">Transparent background, colored border</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.badge-soft</td><td class="px-4 py-2">Tinted background</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.badge-ghost</td><td class="px-4 py-2">Neutral background</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.glass</td><td class="px-4 py-2">Glass morphism effect</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.badge-xs</td><td class="px-4 py-2">Extra small (14px)</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.badge-sm</td><td class="px-4 py-2">Small (16px)</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.badge-lg</td><td class="px-4 py-2">Large (24px)</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.badge-xl</td><td class="px-4 py-2">Extra large (28px)</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.badge-dot</td><td class="px-4 py-2">Dot indicator (no text)</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.badge-container</td><td class="px-4 py-2">Positions badge on a parent element</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.badge-container-top-left</td><td class="px-4 py-2">Badge at top-left corner</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.badge-container-bottom-right</td><td class="px-4 py-2">Badge at bottom-right corner</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.badge-container-bottom-left</td><td class="px-4 py-2">Badge at bottom-left corner</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.badge-pulse</td><td class="px-4 py-2">Pulsing animation</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.badge-bounce</td><td class="px-4 py-2">Bounce entrance animation</td></tr>
        </tbody>
      </table>
    </div>
  </div>
</DocsLayout>
