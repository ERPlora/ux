---
import DocsLayout from '../../layouts/DocsLayout.astro';
import CodePreview from '../../components/CodePreview.astro';
---

<DocsLayout title="Skeleton">
  <p class="text-base-content/70 mb-6">Placeholder loading shapes with shimmer animation for content that is loading.</p>

  <CodePreview
    title="Skeleton Shapes"
    semantic={`<div style="display: flex; flex-direction: column; gap: 0.75rem; padding: 1.5rem;">
  <div class="skeleton skeleton-title" style="width: 60%;"></div>
  <div class="skeleton skeleton-text"></div>
  <div class="skeleton skeleton-text"></div>
  <div class="skeleton skeleton-text" style="width: 70%;"></div>
</div>`}
    tailwind={`<div class="flex flex-col gap-3 p-6">
  <div class="h-6 w-[60%] rounded bg-base-200 animate-pulse"></div>
  <div class="h-4 w-full rounded bg-base-200 animate-pulse"></div>
  <div class="h-4 w-full rounded bg-base-200 animate-pulse"></div>
  <div class="h-4 w-[70%] rounded bg-base-200 animate-pulse"></div>
</div>`}
    height="180px"
    js={`// No JavaScript required - pure CSS animation`}
  />

  <CodePreview
    title="Skeleton Card"
    semantic={`<div style="max-width: 300px; padding: 1rem;">
  <div class="card card-bordered" style="overflow: hidden;">
    <div class="skeleton" style="height: 160px; border-radius: 0;"></div>
    <div class="card-body">
      <div class="skeleton skeleton-title" style="width: 70%;"></div>
      <div class="skeleton skeleton-text"></div>
      <div class="skeleton skeleton-text" style="width: 50%;"></div>
    </div>
  </div>
</div>`}
    tailwind={`<div class="max-w-[300px] p-4">
  <div class="card card-bordered overflow-hidden">
    <div class="h-40 bg-base-200 animate-pulse"></div>
    <div class="card-body">
      <div class="h-6 w-[70%] rounded bg-base-200 animate-pulse"></div>
      <div class="h-4 w-full rounded bg-base-200 animate-pulse"></div>
      <div class="h-4 w-[50%] rounded bg-base-200 animate-pulse"></div>
    </div>
  </div>
</div>`}
    height="320px"
    js={`// No JavaScript required - pure CSS animation`}
  />

  <CodePreview
    title="Skeleton with Avatar"
    semantic={`<div style="display: flex; align-items: center; gap: 0.75rem; padding: 1rem;">
  <div class="skeleton skeleton-circle" style="width: 2.5rem; height: 2.5rem;"></div>
  <div style="flex: 1;">
    <div class="skeleton skeleton-text" style="width: 40%; margin-bottom: 0.5rem;"></div>
    <div class="skeleton skeleton-text" style="width: 70%;"></div>
  </div>
</div>`}
    tailwind={`<div class="flex items-center gap-3 p-4">
  <div class="size-10 rounded-full bg-base-200 animate-pulse shrink-0"></div>
  <div class="flex-1">
    <div class="h-4 w-[40%] rounded bg-base-200 animate-pulse mb-2"></div>
    <div class="h-4 w-[70%] rounded bg-base-200 animate-pulse"></div>
  </div>
</div>`}
    height="90px"
    js={`// No JavaScript required - pure CSS animation`}
  />

  <CodePreview
    title="Pulse Variant"
    semantic={`<div style="display: flex; flex-direction: column; gap: 0.75rem; padding: 1.5rem;">
  <div class="skeleton skeleton-pulse skeleton-title" style="width: 50%;"></div>
  <div class="skeleton skeleton-pulse skeleton-text"></div>
  <div class="skeleton skeleton-pulse skeleton-text" style="width: 80%;"></div>
</div>`}
    tailwind={`<div class="flex flex-col gap-3 p-6">
  <div class="h-6 w-[50%] rounded bg-base-200 animate-pulse"></div>
  <div class="h-4 w-full rounded bg-base-200 animate-pulse"></div>
  <div class="h-4 w-[80%] rounded bg-base-200 animate-pulse"></div>
</div>`}
    height="150px"
    js={`// No JavaScript required - pure CSS animation`}
  />

  <div class="mt-10">
    <h2 class="text-xl font-bold">Classes Reference</h2>
    <div class="overflow-x-auto mt-4">
      <table class="w-full text-sm border border-base-300 rounded-lg overflow-hidden">
        <thead class="bg-base-200">
          <tr>
            <th class="text-left px-4 py-2 font-medium">Class</th>
            <th class="text-left px-4 py-2 font-medium">Description</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-base-300">
          <tr><td class="px-4 py-2 font-mono text-xs">.skeleton</td><td class="px-4 py-2">Base with shimmer animation</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.skeleton-circle</td><td class="px-4 py-2">Round shape</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.skeleton-text</td><td class="px-4 py-2">Text line (16px)</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.skeleton-title</td><td class="px-4 py-2">Title line (24px)</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.skeleton-xs / sm / lg / xl</td><td class="px-4 py-2">Height presets</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.skeleton-pulse</td><td class="px-4 py-2">Pulse animation variant</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.skeleton-static</td><td class="px-4 py-2">No animation</td></tr>
        </tbody>
      </table>
    </div>
  </div>
</DocsLayout>
