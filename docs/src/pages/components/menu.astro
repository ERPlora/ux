---
import DocsLayout from '../../layouts/DocsLayout.astro';
import CodePreview from '../../components/CodePreview.astro';
---

<DocsLayout title="Menu / Dropdown">
  <p class="text-base-content/70 mb-6">Dropdown menus for actions, navigation, and context menus. Use native <code class="text-xs bg-base-200 px-1.5 py-0.5 rounded">&lt;details&gt;</code> for zero-JS dropdowns.</p>

  <CodePreview
    title="Basic Menu"
    semantic={`<div class="menu">
  <button class="menu-item">Edit</button>
  <button class="menu-item">Duplicate</button>
  <div class="menu-divider"></div>
  <button class="menu-item">Archive</button>
  <button class="menu-item menu-item-danger">Delete</button>
</div>`}
    tailwind={`<div class="min-w-48 rounded-2xl p-1 bg-base-100 border border-base-300 shadow-lg">
  <button class="flex items-center gap-2 w-full rounded-lg px-3 py-2 text-sm text-left cursor-pointer bg-transparent hover:bg-base-200">Edit</button>
  <button class="flex items-center gap-2 w-full rounded-lg px-3 py-2 text-sm text-left cursor-pointer bg-transparent hover:bg-base-200">Duplicate</button>
  <div class="h-px my-1 bg-base-200"></div>
  <button class="flex items-center gap-2 w-full rounded-lg px-3 py-2 text-sm text-left cursor-pointer bg-transparent hover:bg-base-200">Archive</button>
  <button class="flex items-center gap-2 w-full rounded-lg px-3 py-2 text-sm text-left cursor-pointer bg-transparent text-error hover:bg-error/10">Delete</button>
</div>`}
    js={`// No JavaScript required - pure CSS component`}
  />

