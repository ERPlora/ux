    js={`// No JavaScript required - pure CSS component`}
  />

  <CodePreview
    title="Dropdown (using &lt;details&gt;)"
    semantic={`<details class="dropdown">
  <summary class="btn">Options</summary>
  <div class="dropdown-content mt-1">
    <div class="menu">
      <button class="menu-item">Profile</button>
      <button class="menu-item">Settings</button>
      <div class="menu-divider"></div>
      <button class="menu-item">Sign out</button>
    </div>
  </div>
</details>`}
    tailwind={`<!-- Native <details> element provides toggle without JS -->
<details class="relative inline-block">
  <summary class="btn">Options</summary>
  <div class="absolute z-100 mt-1">
    <div class="min-w-48 rounded-2xl p-1 bg-base-100 border border-base-300 shadow-lg">
      <button class="flex items-center gap-2 w-full rounded-lg px-3 py-2 text-sm cursor-pointer bg-transparent hover:bg-base-200">Profile</button>
      <button class="flex items-center gap-2 w-full rounded-lg px-3 py-2 text-sm cursor-pointer bg-transparent hover:bg-base-200">Settings</button>
      <div class="h-px my-1 bg-base-200"></div>
      <button class="flex items-center gap-2 w-full rounded-lg px-3 py-2 text-sm cursor-pointer bg-transparent hover:bg-base-200">Sign out</button>
    </div>
  </div>
</details>`}
    js={`// Zero JavaScript! Uses native <details> element.
// To close on click outside, add:
document.addEventListener('click', (e) => {
  document.querySelectorAll('details.dropdown[open]').forEach(d => {
    if (!d.contains(e.target)) d.open = false;
  });
});`}
  />

  <CodePreview
    title="Dropdown End (right-aligned)"
    semantic={`<details class="dropdown dropdown-end">
  <summary class="btn">Right-aligned</summary>
  <div class="dropdown-content mt-1">
    <div class="menu">
      <button class="menu-item menu-item-active">Home</button>
      <button class="menu-item">About</button>
      <button class="menu-item">Contact</button>
    </div>
  </div>
</details>`}
    tailwind={`<details class="relative inline-block">
  <summary class="btn">Right-aligned</summary>
  <div class="absolute right-0 z-100 mt-1">
    <div class="min-w-48 rounded-2xl p-1 bg-base-100 border border-base-300 shadow-lg">
      <button class="flex items-center gap-2 w-full rounded-lg px-3 py-2 text-sm cursor-pointer text-primary bg-primary/8">Home</button>
      <button class="flex items-center gap-2 w-full rounded-lg px-3 py-2 text-sm cursor-pointer bg-transparent hover:bg-base-200">About</button>
      <button class="flex items-center gap-2 w-full rounded-lg px-3 py-2 text-sm cursor-pointer bg-transparent hover:bg-base-200">Contact</button>
    </div>
  </div>
</details>`}
    js={`// No JavaScript required - uses <details> + CSS positioning`}
  />

  <!-- Reference Table -->
  <div class="mt-10 space-y-6">
    <h2 class="text-xl font-bold">Classes Reference</h2>
    <div class="overflow-x-auto">
      <table class="w-full text-sm border border-base-300 rounded-lg overflow-hidden">
        <thead class="bg-base-200">
          <tr>
            <th class="text-left px-4 py-2 font-medium">Class</th>
            <th class="text-left px-4 py-2 font-medium">Description</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-base-300">
          <tr><td class="px-4 py-2 font-mono text-xs">.menu</td><td class="px-4 py-2">Menu container panel</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.menu-item</td><td class="px-4 py-2">Clickable menu item</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.menu-item-active</td><td class="px-4 py-2">Selected/active item</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.menu-item-disabled</td><td class="px-4 py-2">Disabled item</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.menu-item-danger</td><td class="px-4 py-2">Destructive action (red)</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.menu-icon</td><td class="px-4 py-2">Icon inside item</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.menu-label</td><td class="px-4 py-2">Item text label</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.menu-shortcut</td><td class="px-4 py-2">Keyboard shortcut text</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.menu-divider</td><td class="px-4 py-2">Horizontal separator</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.menu-header</td><td class="px-4 py-2">Section header text</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.menu-sm</td><td class="px-4 py-2">Small menu</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.menu-lg</td><td class="px-4 py-2">Large menu</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.dropdown</td><td class="px-4 py-2">Dropdown wrapper (use on &lt;details&gt;)</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.dropdown-content</td><td class="px-4 py-2">Dropdown popup content</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.dropdown-end</td><td class="px-4 py-2">Right-align dropdown</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.dropdown-top</td><td class="px-4 py-2">Open dropdown upward</td></tr>
        </tbody>
      </table>
    </div>
  </div>
</DocsLayout>
