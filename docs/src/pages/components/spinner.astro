---
import DocsLayout from '../../layouts/DocsLayout.astro';
import CodePreview from '../../components/CodePreview.astro';
---

<DocsLayout title="Spinner">
  <p class="text-base-content/70 mb-6">Loading indicators: circular, dots, bars, and iOS-style spinners with sizes and colors.</p>

  <CodePreview
    title="Circular Spinners"
    semantic={`<div class="flex items-center gap-4">
  <div class="spinner spinner-xs"></div>
  <div class="spinner spinner-sm"></div>
  <div class="spinner"></div>
  <div class="spinner spinner-lg"></div>
  <div class="spinner spinner-xl"></div>
</div>`}
    tailwind={`<div class="flex items-center gap-4">
  <div class="inline-block size-[13px] border-2 border-primary/20 border-t-primary rounded-full animate-spin"></div>
  <div class="inline-block size-4 border-2 border-primary/20 border-t-primary rounded-full animate-spin"></div>
  <div class="inline-block size-6 border-3 border-primary/20 border-t-primary rounded-full animate-spin"></div>
  <div class="inline-block size-8 border-4 border-primary/20 border-t-primary rounded-full animate-spin"></div>
</div>`}
    js={`// No JavaScript required — pure CSS animation`}
  />

  <CodePreview
    title="Colors"
    semantic={`<div class="flex items-center gap-4">
  <div class="spinner color-primary"></div>
  <div class="spinner color-success"></div>
  <div class="spinner color-warning"></div>
  <div class="spinner color-error"></div>
  <div class="spinner color-info"></div>
  <div class="spinner spinner-white" style="background: #333; padding: 8px; border-radius: 8px;"></div>
</div>`}
    tailwind={`<div class="flex items-center gap-4">
  <div class="inline-block size-6 border-3 border-primary/20 border-t-primary rounded-full animate-spin"></div>
  <div class="inline-block size-6 border-3 border-success/20 border-t-success rounded-full animate-spin"></div>
  <div class="inline-block size-6 border-3 border-warning/20 border-t-warning rounded-full animate-spin"></div>
  <div class="inline-block size-6 border-3 border-error/20 border-t-error rounded-full animate-spin"></div>
</div>`}
    js={`// Colors use --_spinner-color CSS variable, set by .color-* classes`}
  />

  <CodePreview
    title="Dots & Bars"
    semantic={`<div class="flex items-center gap-8">
  <!-- Dots -->
  <div class="spinner spinner-dots">
    <span></span><span></span><span></span>
  </div>

  <!-- Bars -->
  <div class="spinner spinner-bars">
    <span></span><span></span><span></span><span></span>
  </div>
</div>`}
    tailwind={`<!-- Dots: 3 circles with staggered scale animation
     Bars: 4 vertical bars with staggered scaleY animation -->`}
    js={`// No JavaScript required — pure CSS animation`}
  />

  <CodePreview
    title="iOS Style"
    semantic={`<div class="flex items-center gap-6">
  <div class="spinner spinner-ios spinner-sm">
    <span></span><span></span><span></span><span></span><span></span>
    <span></span><span></span><span></span><span></span><span></span>
  </div>
  <div class="spinner spinner-ios">
    <span></span><span></span><span></span><span></span><span></span>
    <span></span><span></span><span></span><span></span><span></span>
  </div>
  <div class="spinner spinner-ios spinner-lg">
    <span></span><span></span><span></span><span></span><span></span>
    <span></span><span></span><span></span><span></span><span></span>
  </div>
</div>`}
    tailwind={`<!-- 12 radiating lines (::before, ::after + 10 spans) with stepped rotation,
     container rotates in 12 discrete steps -->`}
    js={`// No JavaScript required — pure CSS animation`}
  />

  <CodePreview
    title="Container & Overlay"
    semantic={`<!-- Centered with text -->
<div class="spinner-container">
  <div class="spinner spinner-lg"></div>
  <span class="spinner-container-text">Loading data...</span>
</div>`}
    tailwind={`<div class="flex flex-col items-center justify-center gap-3 p-6">
  <div class="inline-block size-8 border-4 border-primary/20 border-t-primary rounded-full animate-spin"></div>
  <span class="text-sm text-base-content/60">Loading data...</span>
</div>`}
    js={`// Overlay: .spinner-overlay creates fixed fullscreen backdrop
// UX.lockScroll() recommended when showing overlay`}
  />

  <div class="overflow-x-auto mt-8">
    <table class="table">
      <thead><tr><th>Class</th><th>Description</th></tr></thead>
      <tbody>
        <tr><td><code>.spinner</code></td><td>Base circular spinner (24px)</td></tr>
        <tr><td><code>.spinner-xs</code></td><td>Extra small (13px)</td></tr>
        <tr><td><code>.spinner-sm</code></td><td>Small (16px)</td></tr>
        <tr><td><code>.spinner-lg</code></td><td>Large (32px)</td></tr>
        <tr><td><code>.spinner-xl</code></td><td>Extra large (45px)</td></tr>
        <tr><td><code>.spinner-dots</code></td><td>Dots variant (3 dots)</td></tr>
        <tr><td><code>.spinner-bars</code></td><td>Bars variant (4 bars)</td></tr>
        <tr><td><code>.spinner-ios</code></td><td>iOS-style (12 lines)</td></tr>
        <tr><td><code>.spinner-white</code></td><td>White color</td></tr>
        <tr><td><code>.spinner-inline</code></td><td>Inline (for buttons)</td></tr>
        <tr><td><code>.spinner-paused</code></td><td>Paused animation</td></tr>
        <tr><td><code>.spinner-container</code></td><td>Centered container</td></tr>
        <tr><td><code>.spinner-container-text</code></td><td>Loading text</td></tr>
        <tr><td><code>.spinner-overlay</code></td><td>Full-page overlay</td></tr>
      </tbody>
    </table>
  </div>
</DocsLayout>
