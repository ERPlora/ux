---
import DocsLayout from '../../layouts/DocsLayout.astro';
import CodePreview from '../../components/CodePreview.astro';
---

<DocsLayout title="Date Range Picker">
  <p class="text-base-content/70 mb-6">Dual calendar picker with preset ranges, range highlighting, and responsive mobile layout.</p>

  <CodePreview
    title="Basic Date Range"
    semantic={`<div class="date-range date-range-open">
  <button class="date-range-trigger">
