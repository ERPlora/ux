---
import DocsLayout from '../../layouts/DocsLayout.astro';
import CodePreview from '../../components/CodePreview.astro';
---

<DocsLayout title="Card">
  <p class="text-base-content/70 mb-6">Flexible content container with header, body, media, and footer sections.</p>

  <CodePreview
    title="Basic Card"
    noFrame
    semantic={`<div class="card card-bordered" style="width: 320px;">
  <div class="card-body">
    <h2 class="card-title">Card Title</h2>
    <p class="card-subtitle">Subtitle text</p>
    <p>This is a basic card with body content. Cards are flexible containers for grouping related information.</p>
    <div class="card-actions justify-end">
      <button class="btn color-primary">Action</button>
    </div>
  </div>
</div>`}
