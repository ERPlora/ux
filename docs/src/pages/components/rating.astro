    tailwind={`<div class="inline-flex items-center gap-1">
  <div class="inline-flex items-center gap-0.5">
    <button class="flex items-center justify-center w-6 h-6 p-0 bg-transparent border-none text-warning cursor-pointer hover:scale-115 transition-transform">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-full"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
    </button>
    <!-- ... repeat for each star, use text-base-300 for unfilled -->
  </div>
</div>`}
    js={`// Interactive rating with click handlers
const stars = document.querySelectorAll('.rating-star');
stars.forEach((star, i) => {
  star.addEventListener('click', () => {
    stars.forEach((s, j) => {
      s.classList.toggle('rating-star-filled', j <= i);
    });
  });
});`}
  />

