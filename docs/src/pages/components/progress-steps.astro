      <tbody>
        <tr><td><code>.progress-steps</code></td><td>Base container</td></tr>
        <tr><td><code>.progress-steps-horizontal</code></td><td>Horizontal layout</td></tr>
        <tr><td><code>.progress-steps-vertical</code></td><td>Vertical layout</td></tr>
        <tr><td><code>.progress-steps-step</code></td><td>Individual step</td></tr>
        <tr><td><code>.progress-steps-step-active</code></td><td>Current step (filled primary)</td></tr>
        <tr><td><code>.progress-steps-step-completed</code></td><td>Completed step</td></tr>
        <tr><td><code>.progress-steps-step-error</code></td><td>Error state (red)</td></tr>
