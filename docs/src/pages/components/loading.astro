---
import DocsLayout from '../../layouts/DocsLayout.astro';
import CodePreview from '../../components/CodePreview.astro';
---

<DocsLayout title="Loading">
  <p class="text-base-content/70 mb-6">Spinning indicators for loading states with sizes, colors, dots variant, and button integration.</p>

  <CodePreview
    title="Loading Spinner"
    noFrame
    semantic={`<span class="loading"></span>
<span class="loading color-primary"></span>
<span class="loading color-success"></span>
<span class="loading color-error"></span>`}
    tailwind={`<span class="inline-block size-6 rounded-full border-3 border-base-300 border-t-primary animate-spin"></span>
<span class="inline-block size-6 rounded-full border-3 border-base-300 border-t-primary animate-spin"></span>
<span class="inline-block size-6 rounded-full border-3 border-base-300 border-t-success animate-spin"></span>
<span class="inline-block size-6 rounded-full border-3 border-base-300 border-t-error animate-spin"></span>`}
    js={`// No JavaScript required - pure CSS animation`}
  />

  <CodePreview
    title="Loading Sizes"
    noFrame
    semantic={`<span class="loading loading-xs color-primary"></span>
<span class="loading loading-sm color-primary"></span>
<span class="loading color-primary"></span>
<span class="loading loading-lg color-primary"></span>
<span class="loading loading-xl color-primary"></span>`}
    tailwind={`<span class="inline-block size-4 rounded-full border-2 border-base-300 border-t-primary animate-spin"></span>
<span class="inline-block size-5 rounded-full border-2 border-base-300 border-t-primary animate-spin"></span>
<span class="inline-block size-6 rounded-full border-3 border-base-300 border-t-primary animate-spin"></span>
<span class="inline-block size-8 rounded-full border-3 border-base-300 border-t-primary animate-spin"></span>
<span class="inline-block size-12 rounded-full border-4 border-base-300 border-t-primary animate-spin"></span>`}
    js={`// No JavaScript required - pure CSS animation`}
  />

  <CodePreview
    title="Loading Dots"
    noFrame
    semantic={`<span class="loading loading-dots color-primary">
  <span class="loading-dot"></span>
</span>`}
    tailwind={`<!-- Dot animation requires @keyframes - use semantic classes -->
<span class="loading loading-dots color-primary">
  <span class="loading-dot"></span>
</span>`}
    js={`// No JavaScript required - pure CSS animation`}
  />

  <CodePreview
    title="Loading in Button"
    noFrame
    semantic={`<button class="btn color-primary btn-loading">Saving</button>
<button class="btn btn-outline color-primary btn-loading">Loading</button>`}
    tailwind={`<!-- Button loading uses .btn-loading from btn.css -->
<button class="btn color-primary btn-loading">Saving</button>
<button class="btn btn-outline color-primary btn-loading">Loading</button>`}
    js={`// Toggle loading state:
btn.classList.toggle('btn-loading');`}
  />

  <div class="mt-10">
    <h2 class="text-xl font-bold">Classes Reference</h2>
    <div class="overflow-x-auto mt-4">
      <table class="w-full text-sm border border-base-300 rounded-lg overflow-hidden">
        <thead class="bg-base-200">
          <tr>
            <th class="text-left px-4 py-2 font-medium">Class</th>
            <th class="text-left px-4 py-2 font-medium">Description</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-base-300">
          <tr><td class="px-4 py-2 font-mono text-xs">.loading</td><td class="px-4 py-2">Spinner (border animation)</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.loading-dots</td><td class="px-4 py-2">Bouncing dots variant</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.loading-xs / sm / lg / xl</td><td class="px-4 py-2">Size variants</td></tr>
        </tbody>
      </table>
    </div>
  </div>
</DocsLayout>
