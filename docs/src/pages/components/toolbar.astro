  <CodePreview
    title="Footer as Toolbar (Action Bar)"
    noFrame
    semantic={`<footer class="footer">
  <button class="btn btn-sm color-primary">Save</button>
  <button class="btn btn-sm btn-ghost">Discard</button>
  <div style="flex:1"></div>
