---
import DocsLayout from '../../layouts/DocsLayout.astro';
import CodePreview from '../../components/CodePreview.astro';
---

<DocsLayout title="Toolbar">
  <p class="text-base-content/70 mb-6">Horizontal action bar with start, center, and end sections. Used as headers, footers, or inline action bars.</p>

  <CodePreview
    title="Basic"
    semantic={`<div class="toolbar">
  <div class="toolbar-start">
    <button class="btn btn-sm btn-ghost">Back</button>
  </div>
  <div class="toolbar-center">
    <span class="toolbar-title">Page Title</span>
  </div>
  <div class="toolbar-end">
    <button class="btn btn-sm btn-ghost btn-circle">
      <svg class="btn-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6.75a.75.75 0 110-1.5.75.75 0 010 1.5zM12 12.75a.75.75 0 110-1.5.75.75 0 010 1.5zM12 18.75a.75.75 0 110-1.5.75.75 0 010 1.5z" /></svg>
    </button>
  </div>
</div>`}
    tailwind={`<div class="flex items-center gap-2 h-11 px-3 bg-base-100 border-b border-base-300">
  <div class="flex items-center gap-2 shrink-0">
    <button class="btn btn-sm btn-ghost">Back</button>
  </div>
  <div class="flex items-center justify-center gap-2 flex-1 min-w-0">
    <span class="font-semibold text-base whitespace-nowrap overflow-hidden text-ellipsis">Page Title</span>
  </div>
  <div class="flex items-center gap-2 shrink-0 ml-auto">
    <button class="btn btn-sm btn-ghost btn-circle">
      <svg class="btn-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6.75a.75.75 0 110-1.5.75.75 0 010 1.5zM12 12.75a.75.75 0 110-1.5.75.75 0 010 1.5zM12 18.75a.75.75 0 110-1.5.75.75 0 010 1.5z" /></svg>
    </button>
  </div>
</div>`}
    js={`// No JavaScript required - pure CSS component`}
    height="100px"
    noFrame
  />

  <CodePreview
    title="With Divider & Actions"
    noFrame
    semantic={`<div class="toolbar">
  <div class="toolbar-start">
    <button class="btn btn-sm color-primary">Save</button>
    <button class="btn btn-sm btn-ghost">Discard</button>
    <span class="toolbar-divider"></span>
    <button class="btn btn-sm btn-ghost">Undo</button>
    <button class="btn btn-sm btn-ghost">Redo</button>
  </div>
  <div class="toolbar-end">
    <button class="btn btn-sm btn-outline">Preview</button>
    <button class="btn btn-sm color-primary">Publish</button>
  </div>
</div>`}
    tailwind={`<div class="flex items-center gap-2 h-11 px-3 bg-base-100 border-b border-base-300">
  <div class="flex items-center gap-2 shrink-0">
    <button class="btn btn-sm color-primary">Save</button>
    <button class="btn btn-sm btn-ghost">Discard</button>
    <span class="w-px h-6 bg-base-300 shrink-0"></span>
    <button class="btn btn-sm btn-ghost">Undo</button>
    <button class="btn btn-sm btn-ghost">Redo</button>
  </div>
  <div class="flex items-center gap-2 shrink-0 ml-auto">
    <button class="btn btn-sm btn-outline">Preview</button>
    <button class="btn btn-sm color-primary">Publish</button>
  </div>
</div>`}
    js={`// No JavaScript required - pure CSS component`}
  />

  <CodePreview
    title="Color Variants"
    noFrame
    semantic={`<div class="toolbar color-primary mb-2">
  <div class="toolbar-start"><span class="toolbar-title">Primary Toolbar</span></div>
  <div class="toolbar-end"><button class="btn btn-sm btn-ghost">Action</button></div>
</div>
<div class="toolbar color-neutral">
  <div class="toolbar-start"><span class="toolbar-title">Neutral Toolbar</span></div>
  <div class="toolbar-end"><button class="btn btn-sm btn-ghost">Action</button></div>
</div>`}
    tailwind={`<div class="flex items-center gap-2 h-11 px-3 bg-primary text-primary-content border-b border-primary mb-2">
  <div class="flex items-center gap-2 shrink-0"><span class="font-semibold">Primary Toolbar</span></div>
  <div class="flex items-center gap-2 shrink-0 ml-auto"><button class="btn btn-sm btn-ghost">Action</button></div>
</div>
<div class="flex items-center gap-2 h-11 px-3 bg-neutral text-neutral-content border-b border-neutral">
  <div class="flex items-center gap-2 shrink-0"><span class="font-semibold">Neutral Toolbar</span></div>
  <div class="flex items-center gap-2 shrink-0 ml-auto"><button class="btn btn-sm btn-ghost">Action</button></div>
</div>`}
    js={`// No JavaScript required - pure CSS component`}
  />

  <CodePreview
    title="Glass"
    noFrame
    semantic={`<div style="background: linear-gradient(135deg, oklch(0.55 0.22 250), oklch(0.55 0.20 280)); padding: 1.5rem; border-radius: 0.75rem;">
  <div class="toolbar glass" style="border-radius: 0.5rem;">
    <div class="toolbar-start"><span class="toolbar-title">Glass Toolbar</span></div>
    <div class="toolbar-end">
      <button class="btn btn-sm glass">Action</button>
    </div>
  </div>
</div>`}
    tailwind={`<div style="background: linear-gradient(135deg, oklch(0.55 0.22 250), oklch(0.55 0.20 280)); padding: 1.5rem; border-radius: 0.75rem;">
  <div class="flex items-center gap-2 h-11 px-3 bg-glass-bg backdrop-blur-glass backdrop-saturate-180 border border-glass-border rounded-lg">
    <div class="flex items-center gap-2 shrink-0"><span class="font-semibold">Glass Toolbar</span></div>
    <div class="flex items-center gap-2 shrink-0 ml-auto">
      <button class="btn btn-sm glass">Action</button>
    </div>
  </div>
</div>`}
    js={`// No JavaScript required - pure CSS component`}
  />

  <CodePreview
    title="Sizes"
    noFrame
    semantic={`<div class="toolbar toolbar-sm mb-2">
  <div class="toolbar-start"><span class="toolbar-title">Small</span></div>
</div>
<div class="toolbar mb-2">
  <div class="toolbar-start"><span class="toolbar-title">Default</span></div>
</div>
<div class="toolbar toolbar-lg">
  <div class="toolbar-start"><span class="toolbar-title">Large</span></div>
</div>`}
    tailwind={`<div class="flex items-center gap-2 h-9 px-2 bg-base-100 border-b border-base-300 mb-2">
  <div class="flex items-center gap-2 shrink-0"><span class="font-semibold">Small</span></div>
</div>
<div class="flex items-center gap-2 h-11 px-3 bg-base-100 border-b border-base-300 mb-2">
  <div class="flex items-center gap-2 shrink-0"><span class="font-semibold">Default</span></div>
</div>
<div class="flex items-center gap-2 h-14 px-4 bg-base-100 border-b border-base-300">
  <div class="flex items-center gap-2 shrink-0"><span class="font-semibold">Large</span></div>
</div>`}
    js={`// No JavaScript required - pure CSS component`}
  />

  <CodePreview
    title="Transparent & No Border"
    noFrame
    semantic={`<div class="toolbar toolbar-transparent mb-2">
  <div class="toolbar-start"><span class="toolbar-title">Transparent</span></div>
  <div class="toolbar-end"><button class="btn btn-sm btn-ghost">Action</button></div>
</div>
<div class="toolbar toolbar-no-border">
  <div class="toolbar-start"><span class="toolbar-title">No Border</span></div>
  <div class="toolbar-end"><button class="btn btn-sm btn-ghost">Action</button></div>
</div>`}
    tailwind={`<div class="flex items-center gap-2 h-11 px-3 mb-2">
  <div class="flex items-center gap-2 shrink-0"><span class="font-semibold">Transparent</span></div>
  <div class="flex items-center gap-2 shrink-0 ml-auto"><button class="btn btn-sm btn-ghost">Action</button></div>
</div>
<div class="flex items-center gap-2 h-11 px-3 bg-base-100">
  <div class="flex items-center gap-2 shrink-0"><span class="font-semibold">No Border</span></div>
  <div class="flex items-center gap-2 shrink-0 ml-auto"><button class="btn btn-sm btn-ghost">Action</button></div>
</div>`}
    js={`// No JavaScript required - pure CSS component`}
  />

  <!-- Reference Table -->
  <div class="mt-8">
    <h2 class="text-xl font-bold mb-4">Reference</h2>
    <div class="overflow-x-auto">
      <table class="w-full text-sm text-left">
        <thead>
          <tr class="border-b border-base-300">
            <th class="py-2 pr-4 font-semibold">Class</th>
            <th class="py-2 font-semibold">Description</th>
          </tr>
        </thead>
        <tbody class="font-mono text-xs">
          <tr class="border-b border-base-200"><td class="py-2 pr-4">.toolbar</td><td>Base toolbar container</td></tr>
          <tr class="border-b border-base-200"><td class="py-2 pr-4">.toolbar-start</td><td>Left section</td></tr>
          <tr class="border-b border-base-200"><td class="py-2 pr-4">.toolbar-center</td><td>Center section (flex: 1)</td></tr>
          <tr class="border-b border-base-200"><td class="py-2 pr-4">.toolbar-end</td><td>Right section</td></tr>
          <tr class="border-b border-base-200"><td class="py-2 pr-4">.toolbar-title</td><td>Title text</td></tr>
          <tr class="border-b border-base-200"><td class="py-2 pr-4">.toolbar-divider</td><td>Vertical separator line</td></tr>
          <tr class="border-b border-base-200"><td class="py-2 pr-4">.toolbar-transparent</td><td>Transparent background</td></tr>
          <tr class="border-b border-base-200"><td class="py-2 pr-4">.toolbar-no-border</td><td>No border</td></tr>
          <tr class="border-b border-base-200"><td class="py-2 pr-4">.toolbar-bordered-top</td><td>Border on top instead of bottom</td></tr>
          <tr class="border-b border-base-200"><td class="py-2 pr-4">.toolbar.glass</td><td>Glassmorphism variant</td></tr>
          <tr class="border-b border-base-200"><td class="py-2 pr-4">.toolbar-sm / .toolbar-lg</td><td>Size variants</td></tr>
          <tr class="border-b border-base-200"><td class="py-2 pr-4">.toolbar-fixed-top</td><td>Fixed to top of viewport</td></tr>
          <tr class="border-b border-base-200"><td class="py-2 pr-4">.toolbar-fixed-bottom</td><td>Fixed to bottom (with safe area)</td></tr>
          <tr class="border-b border-base-200"><td class="py-2 pr-4">.color-*</td><td>Color composition (primary, neutral, etc.)</td></tr>
        </tbody>
      </table>
    </div>
  </div>
</DocsLayout>
