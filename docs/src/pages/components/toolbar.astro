  <!-- ============ FOOTER EXAMPLES ============ -->
  <h2 class="text-xl font-bold mt-12 mb-4">Footer</h2>

  <CodePreview
    title="Web Footer"
    noFrame
    semantic={`<footer class="footer" style="flex-wrap: wrap; justify-content: center; gap: 1rem;">
  <div class="flex items-center gap-4 text-sm text-base-content/60">
