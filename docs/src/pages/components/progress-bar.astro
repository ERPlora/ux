---
import DocsLayout from '../../layouts/DocsLayout.astro';
import CodePreview from '../../components/CodePreview.astro';
---

<DocsLayout title="Progress">
  <p class="text-base-content/70 mb-6">Linear progress bars for loading states and completion.</p>

  <CodePreview
    title="Basic"
    semantic={`<div class="progress">
  <div class="progress-bar" style="width: 40%"></div>
</div>

<div class="progress color-primary">
  <div class="progress-bar" style="width: 60%"></div>
</div>

<div class="progress color-secondary">
  <div class="progress-bar" style="width: 80%"></div>
</div>`}
    tailwind={`<div class="w-full h-2 rounded-full overflow-hidden bg-base-200">
  <div class="h-full rounded-full bg-primary" style="width: 40%"></div>
</div>

<div class="w-full h-2 rounded-full overflow-hidden bg-base-200">
  <div class="h-full rounded-full bg-primary" style="width: 60%"></div>
</div>

<div class="w-full h-2 rounded-full overflow-hidden bg-base-200">
  <div class="h-full rounded-full bg-secondary" style="width: 80%"></div>
</div>`}
    js={`// Update progress with JavaScript:
// document.querySelector('.progress-bar').style.width = '75%';`}
  />

  <CodePreview
    title="Colors"
    semantic={`<div class="progress color-info"><div class="progress-bar" style="width: 30%"></div></div>
<div class="progress color-success"><div class="progress-bar" style="width: 50%"></div></div>
<div class="progress color-warning"><div class="progress-bar" style="width: 70%"></div></div>
<div class="progress color-error"><div class="progress-bar" style="width: 90%"></div></div>`}
    tailwind={`<div class="w-full h-2 rounded-full overflow-hidden bg-base-200"><div class="h-full rounded-full bg-info" style="width: 30%"></div></div>
<div class="w-full h-2 rounded-full overflow-hidden bg-base-200"><div class="h-full rounded-full bg-success" style="width: 50%"></div></div>
<div class="w-full h-2 rounded-full overflow-hidden bg-base-200"><div class="h-full rounded-full bg-warning" style="width: 70%"></div></div>
<div class="w-full h-2 rounded-full overflow-hidden bg-base-200"><div class="h-full rounded-full bg-error" style="width: 90%"></div></div>`}
    js={`// No JavaScript required - pure CSS component`}
  />

  <CodePreview
    title="Sizes"
    semantic={`<div class="progress progress-xs color-primary"><div class="progress-bar" style="width: 50%"></div></div>
<div class="progress progress-sm color-primary"><div class="progress-bar" style="width: 50%"></div></div>
<div class="progress color-primary"><div class="progress-bar" style="width: 50%"></div></div>
<div class="progress progress-lg color-primary"><div class="progress-bar" style="width: 50%"></div></div>
<div class="progress progress-xl color-primary"><div class="progress-bar" style="width: 50%"></div></div>`}
    tailwind={`<div class="w-full h-0.5 rounded-full overflow-hidden bg-base-200"><div class="h-full rounded-full bg-primary" style="width: 50%"></div></div>
<div class="w-full h-1 rounded-full overflow-hidden bg-base-200"><div class="h-full rounded-full bg-primary" style="width: 50%"></div></div>
<div class="w-full h-2 rounded-full overflow-hidden bg-base-200"><div class="h-full rounded-full bg-primary" style="width: 50%"></div></div>
<div class="w-full h-3 rounded-full overflow-hidden bg-base-200"><div class="h-full rounded-full bg-primary" style="width: 50%"></div></div>
<div class="w-full h-4 rounded-full overflow-hidden bg-base-200"><div class="h-full rounded-full bg-primary" style="width: 50%"></div></div>`}
    js={`// No JavaScript required - pure CSS component`}
  />

  <CodePreview
    title="Indeterminate"
    semantic={`<div class="progress progress-indeterminate color-primary">
  <div class="progress-bar"></div>
</div>`}
    tailwind={`<!-- Indeterminate requires the CSS animation from progress.css -->
<div class="progress progress-indeterminate color-primary">
  <div class="progress-bar"></div>
</div>`}
    js={`// No JavaScript required - pure CSS animation`}
  />

  <CodePreview
    title="Striped & Animated"
    semantic={`<div class="progress progress-striped color-primary">
  <div class="progress-bar" style="width: 60%"></div>
</div>

<div class="progress progress-striped progress-animated color-success">
  <div class="progress-bar" style="width: 45%"></div>
</div>`}
    tailwind={`<!-- Striped patterns require the CSS from progress.css -->
<div class="progress progress-striped color-primary">
  <div class="progress-bar" style="width: 60%"></div>
</div>

<div class="progress progress-striped progress-animated color-success">
  <div class="progress-bar" style="width: 45%"></div>
</div>`}
    js={`// No JavaScript required - pure CSS animation`}
  />

  <CodePreview
    title="With Label"
    semantic={`<div>
  <div class="progress-label">
    <span class="progress-label-text">Upload progress</span>
    <span class="progress-label-value">67%</span>
  </div>
  <div class="progress color-primary">
    <div class="progress-bar" style="width: 67%"></div>
  </div>
</div>`}
    tailwind={`<div>
  <div class="flex justify-between items-center mb-1.5 text-sm">
    <span class="font-medium text-base-content">Upload progress</span>
    <span class="text-base-content/60">67%</span>
  </div>
  <div class="w-full h-2 rounded-full overflow-hidden bg-base-200">
    <div class="h-full rounded-full bg-primary" style="width: 67%"></div>
  </div>
</div>`}
    js={`// Update progress dynamically:
const bar = document.querySelector('.progress-bar');
const label = document.querySelector('.progress-label-value');
let percent = 67;
bar.style.width = percent + '%';
label.textContent = percent + '%';`}
  />

  <!-- Reference Table -->
  <div class="mt-10 space-y-6">
    <h2 class="text-xl font-bold">Classes Reference</h2>

    <div class="overflow-x-auto">
      <table class="w-full text-sm border border-base-300 rounded-lg overflow-hidden">
        <thead class="bg-base-200">
          <tr>
            <th class="text-left px-4 py-2 font-medium">Class</th>
            <th class="text-left px-4 py-2 font-medium">Description</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-base-300">
          <tr><td class="px-4 py-2 font-mono text-xs">.progress</td><td class="px-4 py-2">Base progress track</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.progress-bar</td><td class="px-4 py-2">Fill bar (set width with style)</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.progress-xs</td><td class="px-4 py-2">Extra small (2px)</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.progress-sm</td><td class="px-4 py-2">Small (4px)</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.progress-lg</td><td class="px-4 py-2">Large (12px)</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.progress-xl</td><td class="px-4 py-2">Extra large (16px)</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.progress-indeterminate</td><td class="px-4 py-2">Animated loading state</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.progress-striped</td><td class="px-4 py-2">Striped pattern on bar</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.progress-animated</td><td class="px-4 py-2">Animate striped pattern</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.progress-label</td><td class="px-4 py-2">Label row above progress</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.progress-label-text</td><td class="px-4 py-2">Label text</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.progress-label-value</td><td class="px-4 py-2">Percentage value</td></tr>
        </tbody>
      </table>
    </div>
  </div>
</DocsLayout>
