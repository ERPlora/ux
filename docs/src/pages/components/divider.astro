---
import DocsLayout from '../../layouts/DocsLayout.astro';
import CodePreview from '../../components/CodePreview.astro';
---

<DocsLayout title="Divider">
  <p class="text-base-content/70 mb-6">Horizontal and vertical separators with optional text, styles, colors, and alignment.</p>

  <CodePreview
    title="Basic Divider"
    semantic={`<div class="divider"></div>
<div class="divider">OR</div>
<div class="divider">Section</div>`}
    tailwind={`<div class="flex items-center my-4 text-sm opacity-50">
  <span class="flex-1 h-px bg-base-300"></span>
</div>
<div class="flex items-center my-4 text-sm opacity-50">
  <span class="flex-1 h-px bg-base-300 mr-3"></span>
  OR
  <span class="flex-1 h-px bg-base-300 ml-3"></span>
</div>
<div class="flex items-center my-4 text-sm opacity-50">
  <span class="flex-1 h-px bg-base-300 mr-3"></span>
  Section
  <span class="flex-1 h-px bg-base-300 ml-3"></span>
</div>`}
    height="200px"
    js={`// No JavaScript required - pure CSS component`}
  />

  <CodePreview
    title="Divider Styles"
    semantic={`<div class="divider">Solid</div>
<div class="divider divider-dashed">Dashed</div>
<div class="divider divider-dotted">Dotted</div>
<div class="divider divider-gradient"></div>`}
    tailwind={`<!-- Dashed, dotted, and gradient dividers use repeating-linear-gradient -->
<!-- Use semantic classes for these styles -->
<div class="divider">Solid</div>
<div class="divider divider-dashed">Dashed</div>
<div class="divider divider-dotted">Dotted</div>
<div class="divider divider-gradient"></div>`}
    height="260px"
    js={`// No JavaScript required - pure CSS component`}
  />

  <CodePreview
    title="Divider with Color"
    semantic={`<div class="divider color-primary">Primary</div>
<div class="divider color-success">Success</div>
<div class="divider color-error">Error</div>`}
    tailwind={`<div class="flex items-center my-4 text-sm opacity-50">
  <span class="flex-1 h-px bg-primary mr-3"></span>
  <span class="text-primary">Primary</span>
  <span class="flex-1 h-px bg-primary ml-3"></span>
</div>
<div class="flex items-center my-4 text-sm opacity-50">
  <span class="flex-1 h-px bg-success mr-3"></span>
  <span class="text-success">Success</span>
  <span class="flex-1 h-px bg-success ml-3"></span>
</div>
<div class="flex items-center my-4 text-sm opacity-50">
  <span class="flex-1 h-px bg-error mr-3"></span>
  <span class="text-error">Error</span>
  <span class="flex-1 h-px bg-error ml-3"></span>
</div>`}
    height="200px"
    js={`// No JavaScript required - pure CSS component`}
  />

  <CodePreview
    title="Vertical Divider"
    noFrame
    semantic={`<div style="display: flex; align-items: center; gap: 0; height: 3rem;">
  <span>Left</span>
  <div class="divider divider-vertical"></div>
  <span>Right</span>
</div>`}
    tailwind={`<div class="flex items-center h-12">
  <span>Left</span>
  <div class="flex flex-col self-stretch w-px mx-4">
    <span class="flex-1 bg-base-300"></span>
  </div>
  <span>Right</span>
</div>`}
    js={`// No JavaScript required - pure CSS component`}
  />

  <CodePreview
    title="Text Position"
    semantic={`<div class="divider divider-start">Start</div>
<div class="divider">Center (default)</div>
<div class="divider divider-end">End</div>`}
    tailwind={`<!-- Text alignment uses flex proportions -->
<!-- Use semantic classes for positioning -->
<div class="divider divider-start">Start</div>
<div class="divider">Center (default)</div>
<div class="divider divider-end">End</div>`}
    height="200px"
    js={`// No JavaScript required - pure CSS component`}
  />

  <div class="mt-10">
    <h2 class="text-xl font-bold">Classes Reference</h2>
    <div class="overflow-x-auto mt-4">
      <table class="w-full text-sm border border-base-300 rounded-lg overflow-hidden">
        <thead class="bg-base-200">
          <tr>
            <th class="text-left px-4 py-2 font-medium">Class</th>
            <th class="text-left px-4 py-2 font-medium">Description</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-base-300">
          <tr><td class="px-4 py-2 font-mono text-xs">.divider</td><td class="px-4 py-2">Horizontal line (or with text)</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.divider-vertical</td><td class="px-4 py-2">Vertical separator</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.divider-dashed / dotted</td><td class="px-4 py-2">Line style variants</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.divider-gradient</td><td class="px-4 py-2">Fading gradient line</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.divider-start / end</td><td class="px-4 py-2">Text alignment</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.divider-xs / sm / lg / xl</td><td class="px-4 py-2">Spacing variants</td></tr>
        </tbody>
      </table>
    </div>
  </div>
</DocsLayout>
