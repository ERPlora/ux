let pin = '';
const dots = document.querySelectorAll('.pinpad-dot');

document.querySelectorAll('.pinpad-key').forEach(key => {
  key.addEventListener('click', () => {
    const val = key.textContent.trim();
    if (key.querySelector('svg') || val === '\u2190') {
      pin = pin.slice(0, -1);
    } else if (pin.length < 4) {
      pin += val;
    }
    // Update dots
    dots.forEach((dot, i) => {
      dot.classList.toggle('pinpad-dot-filled', i < pin.length);
    });
    // Auto-submit when complete
    if (pin.length === 4) {
      console.log('PIN entered:', pin);
    }
  });
});`}
