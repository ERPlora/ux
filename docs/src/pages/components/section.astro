  <CodePreview
    title="Collapsible"
    noFrame
    semantic={`<div class="section section-bordered section-collapsible section-expanded" style="margin:0;">
  <div class="section-header">
    <div class="section-header-content">
      <h2 class="section-title">Advanced Options</h2>
    </div>
    <svg class="section-chevron" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5" /></svg>
  </div>
  <div class="section-body">
    <div class="section-body-inner">
      <div class="section-content" style="padding-top:var(--section-padding);">
        <p>These options are for advanced users. Toggle the section header to show or hide.</p>
      </div>
    </div>
  </div>
</div>`}
    tailwind={`<div class="flex flex-col w-full border border-base-300 rounded-box bg-base-100" style="margin:0;">
  <div class="flex items-start justify-between gap-4 p-6 border-b border-base-300 cursor-pointer select-none hover:bg-base-200">
    <div class="flex flex-col gap-2 flex-1 min-w-0">
      <h2 class="text-lg font-semibold leading-tight m-0">Advanced Options</h2>
    </div>
    <svg class="size-5 shrink-0 ml-auto opacity-30 rotate-180 transition-transform" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5" /></svg>
  </div>
  <div class="grid" style="grid-template-rows: 1fr;">
    <div class="overflow-hidden">
      <div class="p-6">
        <p>These options are for advanced users. Toggle the section header to show or hide.</p>
      </div>
    </div>
  </div>
</div>`}
    js={`// Toggle collapsible section:
document.querySelector('.section-header').addEventListener('click', () => {
  const section = document.querySelector('.section-collapsible');
  section.classList.toggle('section-expanded');
});`}
  />

