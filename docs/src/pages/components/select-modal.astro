    tailwind={`<!-- Search input is sticky at the top of the scrollable area -->
<!-- .select-modal-search = sticky top-0 z-10 px-5 py-3 bg-base-100 border-b border-base-200 -->
<!-- Contains a standard .input .input-sm or pure Tailwind equivalent -->
<div x-data="{ open: false, selected: '', search: '' }">
  <button class="relative w-full flex items-center gap-2 cursor-pointer text-left h-[2.75rem] pl-3 pr-10 text-base bg-base-100 border border-base-300 rounded-field" @click="open = true">
