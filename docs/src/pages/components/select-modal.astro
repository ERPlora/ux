    js={`// With Alpine.js: x-data manages open state and selected array
// @click on labels toggles items in/out of the array
// Cancel clears, OK confirms

// Vanilla JS:
const selected = new Set();
document.querySelectorAll('.select-modal-option input[type="checkbox"]').forEach(cb => {
  cb.addEventListener('change', () => {
    cb.checked ? selected.add(cb.value) : selected.delete(cb.value);
    // Update trigger text
    const trigger = document.querySelector('.select-modal-value');
    trigger.textContent = [...selected].join(', ');
  });
});`}
  />

