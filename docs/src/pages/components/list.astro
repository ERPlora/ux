---
import DocsLayout from '../../layouts/DocsLayout.astro';
import CodePreview from '../../components/CodePreview.astro';
---

<DocsLayout title="List">
  <p class="text-base-content/70 mb-6">iOS-style lists with items, headers, and dividers. Perfect for settings screens, menus, and data display.</p>

  <CodePreview
    title="Basic List"
    noFrame
    semantic={`<ul class="list">
  <li class="list-item">
    <span class="list-item-content">
      <span class="list-item-label">General</span>
    </span>
  </li>
  <li class="list-item">
    <span class="list-item-content">
      <span class="list-item-label">Notifications</span>
    </span>
  </li>
  <li class="list-item">
    <span class="list-item-content">
      <span class="list-item-label">Privacy</span>
    </span>
  </li>
</ul>`}
    tailwind={`<ul class="flex flex-col w-full m-0 p-0 list-none bg-base-100">
  <li class="relative flex items-center min-h-11 px-4 py-3 border-b border-base-300">
    <span class="flex-1 min-w-0 text-sm">General</span>
  </li>
  <li class="relative flex items-center min-h-11 px-4 py-3 border-b border-base-300">
    <span class="flex-1 min-w-0 text-sm">Notifications</span>
  </li>
  <li class="relative flex items-center min-h-11 px-4 py-3">
    <span class="flex-1 min-w-0 text-sm">Privacy</span>
  </li>
</ul>`}
    js={`// No JavaScript required - pure CSS component`}
  />

  <CodePreview
    title="With Header & Notes"
    noFrame
    semantic={`<div class="list-header">
  Settings
  <button class="list-header-action">Edit</button>
</div>
<ul class="list">
  <li class="list-item list-item-clickable">
    <span class="list-item-content">
      <span class="list-item-label">Wi-Fi</span>
    </span>
    <span class="list-item-end">
      <span class="list-item-value">Connected</span>
    </span>
  </li>
  <li class="list-item list-item-clickable">
    <span class="list-item-content">
      <span class="list-item-label">Bluetooth</span>
    </span>
    <span class="list-item-end">
      <span class="list-item-value">On</span>
    </span>
  </li>
</ul>
<div class="list-note">Manage your network and connectivity settings.</div>`}
    tailwind={`<!-- Use Tailwind utilities for header/note styling directly -->`}
    js={`// No JavaScript required`}
  />

  <CodePreview
    title="Multiline & Detail"
    noFrame
    semantic={`<ul class="list">
  <li class="list-item list-item-multiline list-item-detail list-item-clickable">
    <span class="list-item-content">
      <span class="list-item-label">John Doe</span>
      <span class="list-item-note">Software Engineer at Acme Corp</span>
    </span>
  </li>
  <li class="list-item list-item-multiline list-item-detail list-item-clickable">
    <span class="list-item-content">
      <span class="list-item-label">Jane Smith</span>
      <span class="list-item-note">Product Designer at StartupX</span>
    </span>
  </li>
</ul>`}
    tailwind={`<!-- Detail indicator uses ::after pseudo-element with chevron -->`}
    js={`// No JavaScript required`}
  />

  <CodePreview
    title="Active & Selected States"
    noFrame
    semantic={`<ul class="list">
  <li class="list-item list-item-clickable">
    <span class="list-item-content">
      <span class="list-item-label">Inbox</span>
    </span>
  </li>
  <li class="list-item list-item-active list-item-clickable">
    <span class="list-item-content">
      <span class="list-item-label">Sent</span>
    </span>
  </li>
  <li class="list-item list-item-clickable">
    <span class="list-item-content">
      <span class="list-item-label">Drafts</span>
    </span>
  </li>
  <li class="list-item list-item-disabled">
    <span class="list-item-content">
      <span class="list-item-label">Trash (disabled)</span>
    </span>
  </li>
</ul>`}
    tailwind={`<!-- Active: primary accent bar on left, tinted background -->`}
    js={`// No JavaScript required for static states`}
  />

  <!-- Reference Table -->
  <div class="mt-10 space-y-6">
    <h2 class="text-xl font-bold">Classes Reference</h2>
    <div class="overflow-x-auto">
      <table class="w-full text-sm border border-base-300 rounded-lg overflow-hidden">
        <thead class="bg-base-200">
          <tr>
            <th class="text-left px-4 py-2 font-medium">Class</th>
            <th class="text-left px-4 py-2 font-medium">Description</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-base-300">
          <tr><td class="px-4 py-2 font-mono text-xs">.list</td><td class="px-4 py-2">Base list container</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.list-inset</td><td class="px-4 py-2">iOS grouped style (rounded, margin)</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.list-item</td><td class="px-4 py-2">List item</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.list-item-clickable</td><td class="px-4 py-2">Hover/active feedback</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.list-item-detail</td><td class="px-4 py-2">Chevron disclosure indicator</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.list-item-multiline</td><td class="px-4 py-2">Multi-line alignment</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.list-item-active</td><td class="px-4 py-2">Active state (left accent bar)</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.list-item-selected</td><td class="px-4 py-2">Selected state (tinted bg)</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.list-item-disabled</td><td class="px-4 py-2">Disabled state</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.list-item-content</td><td class="px-4 py-2">Content container (flex column)</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.list-item-label</td><td class="px-4 py-2">Primary text</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.list-item-note</td><td class="px-4 py-2">Secondary text</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.list-item-value</td><td class="px-4 py-2">End value text</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.list-item-start</td><td class="px-4 py-2">Start slot (icon/avatar)</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.list-item-end</td><td class="px-4 py-2">End slot (value/chevron)</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.list-header</td><td class="px-4 py-2">Section header</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.list-note</td><td class="px-4 py-2">Section footer note</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.list-divider</td><td class="px-4 py-2">Section divider</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.list-sm</td><td class="px-4 py-2">Small size</td></tr>
          <tr><td class="px-4 py-2 font-mono text-xs">.list-lg</td><td class="px-4 py-2">Large size</td></tr>
        </tbody>
      </table>
    </div>
  </div>
</DocsLayout>
