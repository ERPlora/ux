    js={`// PIN pad logic
let pin = '';
document.querySelectorAll('.pinpad-key').forEach(key => {
  key.addEventListener('click', () => {
    const val = key.textContent.trim();
    if (val === '←') pin = pin.slice(0, -1);
    else if (pin.length < 4) pin += val;
    // Update dots
    document.querySelectorAll('.pinpad-dot').forEach((dot, i) => {
      dot.classList.toggle('pinpad-dot-filled', i < pin.length);
    });
    if (pin.length === 4) { /* verify PIN */ }
  });
});`}
  />

