---
import DocsLayout from '../../layouts/DocsLayout.astro';
import CodePreview from '../../components/CodePreview.astro';
---

<DocsLayout title="Range">
  <p class="text-base-content/70 mb-6">Slider input for numeric value selection.</p>

  <CodePreview
    title="Range Basics"
    semantic={`<div class="range">
  <input type="range" min="0" max="100" value="50" />
</div>

<div class="range color-success">
  <input type="range" min="0" max="100" value="75" />
</div>

<div class="range color-error">
  <input type="range" min="0" max="100" value="25" />
</div>`}
    tailwind={`<div class="relative flex items-center w-full h-[2.75rem]">
  <input type="range" min="0" max="100" value="50" class="w-full appearance-none bg-transparent cursor-pointer accent-primary" />
</div>

<div class="relative flex items-center w-full h-[2.75rem]">
  <input type="range" min="0" max="100" value="75" class="w-full appearance-none bg-transparent cursor-pointer accent-success" />
</div>

<div class="relative flex items-center w-full h-[2.75rem]">
  <input type="range" min="0" max="100" value="25" class="w-full appearance-none bg-transparent cursor-pointer accent-error" />
</div>`}
    js={`// Basic range needs no JS. For dynamic value display:
const range = document.querySelector('input[type="range"]');
range.addEventListener('input', (e) => {
  document.querySelector('.range-value').textContent = e.target.value;
});`}
  />

  <CodePreview
    title="Range Sizes"
    semantic={`<div class="range range-sm">
  <input type="range" min="0" max="100" value="40" />
</div>
<div class="range">
  <input type="range" min="0" max="100" value="60" />
</div>
<div class="range range-lg">
  <input type="range" min="0" max="100" value="80" />
</div>`}
    tailwind={`<div class="relative flex items-center w-full h-[2.75rem]">
  <input type="range" min="0" max="100" value="40" class="w-full appearance-none bg-transparent cursor-pointer h-0.5 accent-primary" />
</div>
<div class="relative flex items-center w-full h-[2.75rem]">
  <input type="range" min="0" max="100" value="60" class="w-full appearance-none bg-transparent cursor-pointer h-1 accent-primary" />
</div>
<div class="relative flex items-center w-full h-[2.75rem]">
  <input type="range" min="0" max="100" value="80" class="w-full appearance-none bg-transparent cursor-pointer h-1.5 accent-primary" />
</div>`}
    js={`// No JavaScript required`}
  />

  <!-- ============================================= -->
  <!-- REFERENCE                                     -->
  <!-- ============================================= -->

  <h2 class="text-xl font-bold mt-14 mb-4">Reference</h2>

  <h3 class="font-semibold mb-3">Range Classes</h3>
  <div class="overflow-x-auto">
    <table class="w-full text-sm border-collapse">
      <thead>
        <tr class="border-b border-base-200">
          <th class="text-left py-2 pr-4 font-medium">Class</th>
          <th class="text-left py-2 font-medium">Description</th>
        </tr>
      </thead>
      <tbody class="text-base-content/70">
        <tr class="border-b border-base-200"><td class="py-2 pr-4 font-mono text-xs">.range</td><td class="py-2">Wrapper for range input</td></tr>
        <tr class="border-b border-base-200"><td class="py-2 pr-4 font-mono text-xs">.range-sm</td><td class="py-2">Small track and thumb</td></tr>
        <tr class="border-b border-base-200"><td class="py-2 pr-4 font-mono text-xs">.range-lg</td><td class="py-2">Large track and thumb</td></tr>
        <tr class="border-b border-base-200"><td class="py-2 pr-4 font-mono text-xs">.range-label</td><td class="py-2">Label text</td></tr>
        <tr class="border-b border-base-200"><td class="py-2 pr-4 font-mono text-xs">.range-value</td><td class="py-2">Current value display</td></tr>
        <tr class="border-b border-base-200"><td class="py-2 pr-4 font-mono text-xs">.range-min-max</td><td class="py-2">Min/max labels</td></tr>
        <tr class="border-b border-base-200"><td class="py-2 pr-4 font-mono text-xs">.color-*</td><td class="py-2">Color composition</td></tr>
      </tbody>
    </table>
  </div>

</DocsLayout>
