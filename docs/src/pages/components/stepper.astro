---
import DocsLayout from '../../layouts/DocsLayout.astro';
import CodePreview from '../../components/CodePreview.astro';
---

<DocsLayout title="Stepper">
  <p class="text-base-content/70 mb-6">Multi-step form indicator with horizontal, vertical, compact and dot variants.</p>

  <CodePreview
    title="Basic Stepper"
    semantic={`<div class="stepper">
  <div class="stepper-header">
    <div class="stepper-step stepper-step-completed">
      <div class="stepper-circle">
        <svg xmlns="http://www.w3.org/2000/svg" class="size-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
      </div>
      <div class="stepper-label">Account</div>
    </div>
    <div class="stepper-step stepper-step-active">
      <div class="stepper-circle">2</div>
      <div class="stepper-label">Profile</div>
    </div>
    <div class="stepper-step">
      <div class="stepper-circle">3</div>
      <div class="stepper-label">Review</div>
    </div>
  </div>
  <div class="stepper-content">
    <p>Step 2 content goes here...</p>
  </div>
  <div class="stepper-actions">
    <div class="stepper-actions-start">
      <button class="btn">Back</button>
    </div>
    <div class="stepper-actions-end">
      <button class="btn color-primary">Continue</button>
    </div>
  </div>
</div>`}
    tailwind={`<div class="flex flex-col w-full">
  <div class="flex items-start justify-between relative mb-8">
    <!-- Completed step -->
    <div class="flex flex-col items-center relative z-1 flex-1">
      <div class="flex items-center justify-center w-10 h-10 rounded-full bg-success text-success-content font-semibold">
        <svg xmlns="http://www.w3.org/2000/svg" class="size-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
      </div>
      <div class="text-sm font-medium mt-2 text-success">Account</div>
    </div>
    <!-- Active step -->
    <div class="flex flex-col items-center relative z-1 flex-1">
      <div class="flex items-center justify-center w-10 h-10 rounded-full bg-primary text-primary-content font-semibold">2</div>
      <div class="text-sm font-medium mt-2 text-primary">Profile</div>
    </div>
    <!-- Pending step -->
    <div class="flex flex-col items-center relative z-1 flex-1">
      <div class="flex items-center justify-center w-10 h-10 rounded-full border-2 border-base-300 bg-base-100 font-semibold text-base-content/60">3</div>
      <div class="text-sm font-medium mt-2 text-base-content/60">Review</div>
    </div>
  </div>
  <div class="flex-1 min-h-[200px]"><p>Step 2 content goes here...</p></div>
  <div class="flex justify-between items-center mt-8 pt-6 border-t border-base-200 gap-4">
    <button class="btn">Back</button>
    <button class="btn color-primary">Continue</button>
  </div>
</div>`}
    js={`// Toggle stepper-step-active / stepper-step-completed classes
// Update stepper-panel-active to show the correct panel
// Example:
// step.classList.remove('stepper-step-active');
// step.classList.add('stepper-step-completed');
// nextStep.classList.add('stepper-step-active');`}
  />

  <CodePreview
    title="Compact & Dot Steppers"
    semantic={`<!-- Compact -->
<div class="stepper stepper-compact">
  <div class="stepper-header">
    <div class="stepper-step stepper-step-completed">
      <div class="stepper-circle">
        <svg xmlns="http://www.w3.org/2000/svg" class="size-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
      </div>
      <div class="stepper-label">Step 1</div>
    </div>
    <div class="stepper-step stepper-step-active">
      <div class="stepper-circle">2</div>
      <div class="stepper-label">Step 2</div>
    </div>
    <div class="stepper-step">
      <div class="stepper-circle">3</div>
      <div class="stepper-label">Step 3</div>
    </div>
  </div>
</div>

<!-- Dots -->
<div class="stepper stepper-dots mt-8">
  <div class="stepper-header">
    <div class="stepper-step stepper-step-completed">
      <div class="stepper-circle"></div>
      <div class="stepper-label">Done</div>
    </div>
    <div class="stepper-step stepper-step-active">
      <div class="stepper-circle"></div>
      <div class="stepper-label">Current</div>
    </div>
    <div class="stepper-step">
      <div class="stepper-circle"></div>
      <div class="stepper-label">Next</div>
    </div>
  </div>
</div>`}
    tailwind={`<!-- Compact: uses smaller 32px circles and xs labels -->
<!-- Dots: uses tiny 12px circles without numbers -->`}
    js={`// No JavaScript required for styling
// Toggle classes to update state`}
  />

  <CodePreview
    title="Error State"
    semantic={`<div class="stepper">
  <div class="stepper-header">
    <div class="stepper-step stepper-step-completed">
      <div class="stepper-circle">
        <svg xmlns="http://www.w3.org/2000/svg" class="size-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
      </div>
      <div class="stepper-label">Details</div>
    </div>
    <div class="stepper-step stepper-step-error">
      <div class="stepper-circle">
        <svg xmlns="http://www.w3.org/2000/svg" class="size-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M18 6 6 18M6 6l12 12"/></svg>
      </div>
      <div class="stepper-label">Payment</div>
    </div>
    <div class="stepper-step">
      <div class="stepper-circle">3</div>
      <div class="stepper-label">Confirm</div>
    </div>
  </div>
</div>`}
    tailwind={`<!-- Error step uses bg-error / text-error colors -->`}
    js={`// Add stepper-step-error class to mark a step as failed`}
  />

  <div class="overflow-x-auto mt-8">
    <table class="table">
      <thead><tr><th>Class</th><th>Description</th></tr></thead>
      <tbody>
        <tr><td><code>.stepper</code></td><td>Container</td></tr>
        <tr><td><code>.stepper-header</code></td><td>Steps indicator row</td></tr>
        <tr><td><code>.stepper-step</code></td><td>Individual step</td></tr>
        <tr><td><code>.stepper-step-active</code></td><td>Current step (primary color)</td></tr>
        <tr><td><code>.stepper-step-completed</code></td><td>Completed step (success color)</td></tr>
        <tr><td><code>.stepper-step-error</code></td><td>Error step (error color)</td></tr>
        <tr><td><code>.stepper-step-disabled</code></td><td>Disabled step</td></tr>
        <tr><td><code>.stepper-circle</code></td><td>Step number circle (40px)</td></tr>
        <tr><td><code>.stepper-label</code></td><td>Step text label</td></tr>
        <tr><td><code>.stepper-description</code></td><td>Optional description text</td></tr>
        <tr><td><code>.stepper-progress</code></td><td>Completed progress line overlay</td></tr>
        <tr><td><code>.stepper-content</code></td><td>Step content area</td></tr>
        <tr><td><code>.stepper-panel</code></td><td>Individual panel (hidden by default)</td></tr>
        <tr><td><code>.stepper-panel-active</code></td><td>Visible panel with fade-in animation</td></tr>
        <tr><td><code>.stepper-actions</code></td><td>Bottom action buttons</td></tr>
        <tr><td><code>.stepper-vertical</code></td><td>Vertical layout variant</td></tr>
        <tr><td><code>.stepper-compact</code></td><td>Smaller circles (32px)</td></tr>
        <tr><td><code>.stepper-dots</code></td><td>Dot-only minimal variant (12px)</td></tr>
        <tr><td><code>.stepper-progress-bar</code></td><td>Progress bar variant (no circles)</td></tr>
      </tbody>
    </table>
  </div>
</DocsLayout>
